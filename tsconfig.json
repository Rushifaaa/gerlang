{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "types",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"noImplicitAny": true,
		"outDir": "out",
		"removeComments": true,
		"rootDir": "src",
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2015"
	}
}
